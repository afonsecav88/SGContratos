@page
@model LoginModel

@{
    ViewData["Title"] = "Entrar";
}
<div class="container">
    <h3 class="text-center text-monospace"> <strong>Ingrese usuario y contraseña.</strong></h3>

    <div class="row">

        <div class="col-md-2">
        </div>
        <div class="col-md-8 ">
            <section>
                <form id="account" method="post">
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label><strong>Correo Electrónico</strong></label>
                        <!--<label asp-for="Input.Email"></label>-->
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">

                        <label><strong>Contraseña</strong></label>
                        <!-- <label asp-for="Input.Email"></label>-->
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success"><strong>Entrar</strong></button>
                    </div>
                    <div class="form-group text-right">
                        <p>
                            <a class="text-danger" id="forgot-password " title="Se me olvidó !" asp-page="./ForgotPassword"><img src="~/images/olvidar.png" title="Se me olvidó !" /><strong> Olvidé la Contraseña</strong></a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
        <div class="col-md-2">
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
